Vagrant.configure("2") do |config|

#Provisioning MongoDB VM

    config.vm.define "database" do |mongodb|
      mongodb.vm.box = "generic/ubuntu2010"
      mongodb.vm.network "private_network", ip: "192.168.56.20"
      mongodb.vm.provider "virtualbox" do |vb|
        vb.name = "MongoDB"
        config.vm.synced_folder "env/", "/home/vagrant/env" 
        end
    #   mongodb.vm.provision "shell", path: "SCRIPT NEEDED TO BE CREATED, ENTER PATH HERE"
    
    end

#Provisioning JS App VM

    config.vm.define "snake" do |jsapp|
        jsapp.vm.box = "generic/ubuntu2010"      
        jsapp.vm.provider "virtualbox" do |vb|
            vb.name = "JS-App"
            # config.vm.synced_folder "PUT THE LOCATION WHERE WE WANT THE FOLDER TO BE", "IF WE HAVE A SHARED FOLDER PUT THE PATH HERE"
            end
        
    end
end